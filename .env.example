# HeardAI Environment Configuration
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Custom wake word (default is "hey heardai")
WAKE_WORD=hey heardai

# Optional: Whisper model (default is "whisper-1")
WHISPER_MODEL=whisper-1

# Optional: Audio recording duration in seconds (default is 5)
COMMAND_RECORDING_DURATION=5

# Optional: Background listening enabled (default is true)
BACKGROUND_LISTENING_ENABLED=true
